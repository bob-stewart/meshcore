  "properties": {
    "id": {"type": "string"},
    "caseId": {"type": "string"},
    "issuedAt": {"type": "string"},
    "ruling": {"type": "string", "enum": ["APPROVE", "REJECT", "REQUEST_CHANGES"]},
    "rationale": {"type": "string"},
    "decisionRecordId": {"type": "string"},
    "clearanceCertificateId": {"type": "string"}
  },
  "additionalProperties": true
}
